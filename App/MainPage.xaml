<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.Maui.Controls"
             xmlns:local="clr-namespace:QRMySqlApp"
             x:Class="QRMySqlApp.MainPage"
             BackgroundColor="#F5F7FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Estilos locales adicionales si son necesarios -->
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- ============================================================
             HEADER CON GRADIENTE
             ============================================================ -->
        <Frame Grid.Row="0" 
               BackgroundColor="#3498DB" 
               CornerRadius="0,0,25,25"
               HasShadow="True"
               Padding="20,40,20,25"
               Margin="0">
            <VerticalStackLayout Spacing="5">
                <Label Text="📱 Escáner QRr + MySQL"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Escanea y consulta productos"
                       FontSize="14"
                       TextColor="#ECF0F1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- ============================================================
             CONTENIDO PRINCIPAL CON SCROLL
             ============================================================ -->
        <ScrollView Grid.Row="1" Padding="15,10,15,20">
            <VerticalStackLayout Spacing="15">

                <!-- ========================================================
                     BADGE DE ESTADO
                     ======================================================== -->
                <Frame Padding="0" 
                       CornerRadius="20" 
                       HasShadow="False"
                       HorizontalOptions="Center"
                       BackgroundColor="{Binding ProductFound, Converter={StaticResource BoolToStatusColorConverter}}">
                    <Label Text="{Binding MensajeEstado}"
                           Style="{StaticResource StatusLabelStyle}"
                           TextColor="White"/>
                </Frame>

                <!-- ========================================================
                     VISTA DE CÁMARA (Cuando está escaneando)
                     ======================================================== -->
                <Frame IsVisible="{Binding IsScanning}"
                       Padding="0"
                       CornerRadius="20"
                       HasShadow="True"
                       BackgroundColor="White"
                       HeightRequest="320"
                       BorderColor="#BDC3C7">
                    <Grid>
                        <!-- Lector de código QR -->
                        <zxing:CameraBarcodeReaderView
                            x:Name="cameraBarcodeReaderView"
                            IsDetecting="True"
                            BarcodesDetected="OnBarcodesDetected"
                            CameraLocation="Rear"/>

                        <!-- Overlay con marco de escaneo -->
                        <Frame WidthRequest="200"
                               HeightRequest="200"
                               BorderColor="White"
                               BackgroundColor="Transparent"
                               CornerRadius="15"
                               Padding="0"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCameraTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Texto instructivo -->
                        <Label Text="Apunta al código QR"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White"
                               BackgroundColor="#80000000"
                               Padding="15,8"
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               Margin="0,0,0,20"/>
                    </Grid>
                </Frame>

                <!-- ========================================================
                     VISTA DE ÉXITO (Código escaneado)
                     ======================================================== -->
                <Frame IsVisible="{Binding IsScanning, Converter={StaticResource InvertedBoolConverter}}"
                       Padding="0"
                       CornerRadius="20"
                       HasShadow="True"
                       BackgroundColor="#27AE60"
                       HeightRequest="150">
                    <Grid>
                        <VerticalStackLayout HorizontalOptions="Center" 
                                           VerticalOptions="Center"
                                           Spacing="10">
                            <Label Text="✓"
                                   FontSize="48"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="Código QR Escaneado"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="Procesando información..."
                                   FontSize="14"
                                   TextColor="#ECF0F1"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- ========================================================
                     CARD: DATOS DEL CÓDIGO QR
                     ======================================================== -->
                <Frame Style="{StaticResource CardFrameStyle}"
                       BorderColor="#3498DB">
                    <VerticalStackLayout Spacing="12">
                        <!-- Encabezado del card -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="📋" FontSize="22"/>
                            <Label Text="Datos del Código QR" 
                                   Style="{StaticResource SectionTitleStyle}"/>
                        </HorizontalStackLayout>

                        <BoxView Color="#ECF0F1" HeightRequest="1" Margin="0,5"/>

                        <!-- Datos completos del QR -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Datos completos:" Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Padding="12" 
                                   CornerRadius="8" 
                                   BackgroundColor="#F8F9FA"
                                   HasShadow="False"
                                   BorderColor="#E8E8E8">
                                <Label Text="{Binding DatosQR}" 
                                       FontSize="13"
                                       TextColor="#2C3E50"
                                       LineBreakMode="WordWrap"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Grid con campos individuales -->
                        <Grid ColumnDefinitions="*,*" 
                              RowDefinitions="Auto,Auto,Auto,Auto" 
                              ColumnSpacing="10" 
                              RowSpacing="8">

                            <!-- Serial -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="🔖 Serial:" 
                                   Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Grid.Row="1" Grid.Column="0"
                                   Padding="10" 
                                   CornerRadius="8" 
                                   BackgroundColor="#FFF9E6"
                                   HasShadow="False"
                                   BorderColor="#F39C12">
                                <Label Text="{Binding Serial}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#E67E22"/>
                            </Frame>

                            <!-- Campo 1 -->
                            <Label Grid.Row="0" Grid.Column="1" 
                                   Text="📝 Campo 1:" 
                                   Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Grid.Row="1" Grid.Column="1"
                                   Padding="10" 
                                   CornerRadius="8" 
                                   BackgroundColor="#F0F8FF"
                                   HasShadow="False"
                                   BorderColor="#3498DB">
                                <Label Text="{Binding Campo1}" 
                                       FontSize="14"
                                       TextColor="#2C3E50"/>
                            </Frame>

                            <!-- Campo 2 -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Text="📝 Campo 2:" 
                                   Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Grid.Row="3" Grid.Column="0"
                                   Padding="10" 
                                   CornerRadius="8" 
                                   BackgroundColor="#F0F8FF"
                                   HasShadow="False"
                                   BorderColor="#3498DB">
                                <Label Text="{Binding Campo2}" 
                                       FontSize="14"
                                       TextColor="#2C3E50"/>
                            </Frame>

                            <!-- Campo 3 -->
                            <Label Grid.Row="2" Grid.Column="1" 
                                   Text="📝 Campo 3:" 
                                   Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Grid.Row="3" Grid.Column="1"
                                   Padding="10" 
                                   CornerRadius="8" 
                                   BackgroundColor="#F0F8FF"
                                   HasShadow="False"
                                   BorderColor="#3498DB">
                                <Label Text="{Binding Campo3}" 
                                       FontSize="14"
                                       TextColor="#2C3E50"/>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- ========================================================
                     CARD: INFORMACIÓN DEL PRODUCTO (Cuando se encuentra)
                     ======================================================== -->
                <Frame Style="{StaticResource CardFrameStyle}"
                       BorderColor="#27AE60"
                       IsVisible="{Binding ProductFound}">
                    <VerticalStackLayout Spacing="12">
                        <!-- Encabezado -->
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="🗄️" FontSize="22"/>
                            <Label Text="Información del Producto" 
                                   Style="{StaticResource SectionTitleStyle}"
                                   TextColor="#27AE60"/>
                        </HorizontalStackLayout>

                        <BoxView Color="#A9DFBF" HeightRequest="2" Margin="0,5"/>

                        <!-- Nombre del producto -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Nombre del Producto:" Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Padding="12" 
                                   CornerRadius="8" 
                                   BackgroundColor="#E8F8F5"
                                   HasShadow="False"
                                   BorderColor="#27AE60">
                                <Label Text="{Binding NombreProducto}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#27AE60"/>
                            </Frame>

                            <!-- Descripción -->
                            <Label Text="Descripción:" Style="{StaticResource FieldLabelStyle}"/>
                            <Frame Padding="12" 
                                   CornerRadius="8" 
                                   BackgroundColor="#F4F6F7"
                                   HasShadow="False"
                                   BorderColor="#BDC3C7">
                                <Label Text="{Binding DescripcionProducto}" 
                                       FontSize="14"
                                       TextColor="#34495E"
                                       LineBreakMode="WordWrap"
                                       MaxLines="3"/>
                            </Frame>

                            <!-- Precio y Stock -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <!-- Precio -->
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="💰 Precio:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Frame Padding="12,10" 
                                           CornerRadius="8" 
                                           BackgroundColor="#FEF5E7"
                                           HasShadow="False"
                                           BorderColor="#F39C12">
                                        <Label Text="{Binding PrecioProducto, StringFormat='${0:F2}'}" 
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#E67E22"
                                               HorizontalOptions="Center"/>
                                    </Frame>
                                </VerticalStackLayout>

                                <!-- Stock -->
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="📦 Stock:" Style="{StaticResource FieldLabelStyle}"/>
                                    <Frame Padding="12,10" 
                                           CornerRadius="8" 
                                           BackgroundColor="#EBF5FB"
                                           HasShadow="False"
                                           BorderColor="#3498DB">
                                        <Label Text="{Binding StockProducto}" 
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#3498DB"
                                               HorizontalOptions="Center"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- ========================================================
                     CARD: PRODUCTO NO ENCONTRADO
                     ======================================================== -->
                <Frame Style="{StaticResource CardFrameStyle}"
                       BorderColor="#E74C3C"
                       IsVisible="{Binding ShowNotFoundMessage}">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="❌"
                               FontSize="48"
                               HorizontalOptions="Center"/>
                        <Label Text="Producto No Encontrado"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#E74C3C"
                               HorizontalOptions="Center"/>
                        <Label Text="El serial no existe en la base de datos"
                               FontSize="14"
                               TextColor="#7F8C8D"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- ========================================================
                     BOTONES DE ACCIÓN
                     ======================================================== -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,0">
                    <Button Grid.Column="0"
                            Text="🔄 Nuevo Escaneo"
                            Command="{Binding ReiniciarEscaneoCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>

                    <Button Grid.Column="1"
                            Text="🔌 Test Conexión"
                            Command="{Binding TestConexionCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </Grid>

                <!-- ========================================================
                     FOOTER
                     ======================================================== -->
                <Label Text="Desarrollado con .NET MAUI"
                       FontSize="11"
                       TextColor="#95A5A6"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

